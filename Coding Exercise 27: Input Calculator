import java.util.Scanner;
 
public class InputCalculator {
    public static void inputThenPrintSumAndAverage(){
        Scanner sc = new Scanner(System.in);
        int sum = 0;
        int counter = 0;
        
        while(sc.hasNextInt()){
            sum += sc.nextInt();
            counter++;
        }
        System.out.println("SUM = " + sum + " AVG = " + Math.round((double) sum/counter));
        sc.close();
    }
}
